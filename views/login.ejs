
   <% layout('layouts/boilerplate') %>
   
   <div class="container d-flex justify-content-center align-items-center" style="height: 100vh">
        <div class="col-6">
            <h4 class="my-4">Log in to your account</h4>
            <form action="/login" method="POST">
                <div class="form-floating mb-3">
                    <input type="username" name="username" id="username" class="form-control" placeholder="Email address">
                    <label for="email">Username</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="password" name="password" id="password" placeholder="Password" class="form-control">
                    <label for="password">Password</label>
                </div>
                <div class="d-grid mb-3">
                    <button type="submit" class="btn btn-outline-danger btn-lg">Sign in</button>
                </div>
            </form>
            <div class="text-center">Don't have an account? <a href="/signup">Sign up</a></div>
        </div>
    </div>
