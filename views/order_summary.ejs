<% layout('layouts/boilerplate') %>

    <div class="container" id="order-container">
        <div class="row d-flex justify-content-center gx-5">
            <div class="col-md-6">
                <div class="row my-4">
                    <h3>Thank you for testing the website!</h3>
                    <p class="mt-4">Here's your order:</p>
                </div>
                <div class="row">
                    <ul class="list-group mb-3">
                        <% const cart=req.session.cart %>
                            <% for(let cartItem of cart) { %>
                                <li class="list-group-item d-flex justify-content-between lh-condensed">
                                    <div>
                                        <h6 class="my-0">
                                            <%= cartItem.line + ' ' + cartItem.model %>
                                        </h6>
                                        <small class="text-muted">
                                            <%= cartItem.brand %>
                                        </small> <br>
                                        <small class="text-muted">Size: <%= cartItem.size %></small>
                                    </div>
                                    <span class="text-muted"><%= cartItem.qty %> x <span class="text-success">$<%= cartItem.price %></span></span>
                                </li>
                                <% } %>
                                    <li class="list-group-item d-flex justify-content-between">
                                        <span>Total (USD)</span>
                                        <strong>
                                            <%= req.session.total %>
                                        </strong>
                                    </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row my-4">
                    <h5>I'm not really selling shoes. But if I was, yours would be shipped to:</h5>
                </div>
                <hr>
                <div class="row my-4">
                    <p>
                        <%= loggedUser.firstName + ' ' + loggedUser.lastName %>
                    </p>
                    <p>
                        <%= loggedUser.streetAddress %>
                    </p>
                    <p>
                        <%= loggedUser.zip + ' ' + loggedUser.city %>
                    </p>
                    <p>
                        <%= loggedUser.country %>
                    </p>
                </div>
                <hr>
                <div class="row my-4">
                    <p> Found a bug? Something doesn't look right on your screen resolution? General feedback or suggestions on what I could improve? Let me know!
                    </p>
                    <a href="mailto:jkdejnek@gmail.com" class="mt-4">jkdejnek@gmail.com</a>
                    <p>Or reach out on <a href="https://www.linkedin.com/in/jakub-dejnek-385935197/">LinkedIn</a></p>
                </div>
            </div>
        </div>
    </div>