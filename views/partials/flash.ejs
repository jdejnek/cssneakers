<% if(success && success.length) {%>
    <div class="alert alert-success alert-dismissible fade show d-flex justify-content-center" role="alert" style="margin-top: 4rem;">
        <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
            </button>
    </div>
    <% } %>

<% if(error && error.length) {%>
    <div class="alert alert-danger alert-dismissible fade show d-flex justify-content-center" role="alert" style="margin-top: 4rem;">
        <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
            </button>
        </div>
    <% } %>