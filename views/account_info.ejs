<% layout('layouts/boilerplate') %>

<div class="container d-flex justify-content-center h-100" style="margin-top: 5rem; padding-bottom: 4rem;">
    <div class="col-6 my-1">
        <h4 class="text-center my-4">Update your account info</h4>
        <form action="/account_info/?_method=PATCH" method="post" id="signup-form">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="first-name" class="form-label">First name</label>
                    <input type="text" class="form-control" name="firstName" id="firstName" value="<%= loggedUser.firstName %>" required>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="first-name" class="form-label">Last name</label>
                    <input type="text" class="form-control" name="lastName" id="lastName" value="<%= loggedUser.lastName %>" required>
                </div>
            </div>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="username" class="form-control" name="username" id="username" value="<%= loggedUser.username %>" required>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email address</label>
                <input type="email" class="form-control" name="email" id="email" value="<%= loggedUser.email %>" required>
            </div>
            <div class="mb-3">
                <label for="street-address" class="form-label">Street address</label>
                <input type="street-address" class="form-control" name="streetAddress" id="streetAddress" value="<%= loggedUser.streetAddress %>" required>
            </div>
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" class="form-control" name="country" id="country" value="<%= loggedUser.country %>">
                </div>
                <div class="col-md-4 mb-3">
                    <label for="city" class="form-label">City</label>
                    <input type="text" class="form-control" name="city" id="city" value="<%= loggedUser.city %>">
                </div>
                <div class="col-md-4 mb-3">
                    <label for="zip" class="form-label">Zip code</label>
                    <input type="text" class="form-control" name="zip" id="zip" value="<%= loggedUser.zip %>">
                </div>
                <div class="mb-3">
                    <label for="company" class="form-label">Company (optional)</label>
                    <input type="text" name="company" id="company" class="form-control" value="<%= loggedUser.company %>">
                </div>
            </div>
            <hr class="mb-4">
            <div class="d-grid gap-2">
            <button class="btn btn-danger" type="submit">Update</button>
            <a role="button" onclick="history.back()" class="btn btn-outline-danger">I changed my mind</a>
        </div>
        </form>
    </div>
</div>